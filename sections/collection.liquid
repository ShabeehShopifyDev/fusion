<style>
.featured_collection {
  padding: 40px 20px;
}

.collection-header {
  text-align: center;
  margin-bottom: 30px;
}

.collection-products {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  justify-content: center;
}

.product-card {
  flex: 0 0 calc(100% / {{ section.settings.number_of_products }});
}

.product-card img {
  width: 100%;
}

@media screen and (max-width: 991px) {
  .product-card {
    flex: 0 0 calc(100%/{{ section.settings.n_of_products_row_mobile }});
  }
}

</style>
<div class="featured_collection">
  {%- liquid
    assign collection = section.settings.collection
    assign collection_image = section.settings.collection_image | default: collection.featured_image
    assign number_of_products = section.settings.number_of_products
  -%}

  {%- if collection and collection.products_count > 0 -%}
    <div class="collection-header">
      {%- if collection_image != blank -%}
        <img src="{{ collection_image | image_url: width: 800 }}" alt="{{ collection.title }}" loading="lazy">
      {%- endif -%}
      <h2>{{ collection.title }}</h2>
    </div>

    <div class="collection-products has__flex has__flex-wrap">
      {%- for product in collection.products limit: number_of_products -%}
        <div class="product-card has__one-third">
          <a href="{{ product.url }}">
            {%- if product.featured_image -%}
              <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}" loading="lazy">
            {%- else -%}
              {{ 'product-1' | placeholder_svg_tag }}
            {%- endif -%}
            <h3 class="title">{{ product.title }}</h3>
            <p class="price">{{ product.price | money }}</p>
          </a>
        </div>
      {%- endfor -%}
    </div>
  {%- else -%}
    <div class="collection-header">
      <h2>Example Products</h2>
    </div>
    <div class="collection-products has__flex has__flex-wrap">
      {%- for i in (1..6) -%}
        <div class="product-card has__one-third">
          <a href="#">
            {{ 'product-' | append: i | placeholder_svg_tag }}
            <h3 class="title">Example Product {{ i }}</h3>
            <p class="price">$19.99</p>
          </a>
        </div>
      {%- endfor -%}
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Featured Collection",
  "tag": "section",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "image_picker",
      "id": "collection_image",
      "label": "Featured Image",
      "info": "Overrides the collection's default image if selected"
    },
    {
      "type": "range",
      "id": "number_of_products",
      "label": "Number of Products",
      "min": 1,
      "max": 20,
      "default": 6
    },
    {
      "type": "range",
      "id": "n_of_products_row",
      "label": "Products in a row",
      "min": 3,
      "max": 6,
      "default": 4
    },
    {
      "type": "range",
      "id": "n_of_products_row_mobile",
      "label": "Products in a row mobile",
      "min": 1,
      "max": 3,
      "default": 2
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}