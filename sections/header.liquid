{% style %}
  .header_wrapper .header{
    background:{{settings.header-background-color}};
  }
  .header_wrapper .header .logo{
    max-width:{{section.settings.logo-width}}px;
  }
{% endstyle %}
<div class="header">
  <div class="header_wrapper container">
    <nav class="nav-bar" >
      <ul>
        {% assign links = linklists[section.settings.link_list].links %}
        {% for link in links %}
          <li>
            <a href="{{ link.url }}">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </nav>
    <div class="header-brand" >
      <a href="{{ shop.url }}">
        <div class="logo">
          {% if section.settings.logo != blank %}
            <img src="{{ section.settings.logo |  img_url:'master' }}" alt="{{ section.settings.logo.alt }}" class="site-logo">
          {% elsif settings.logo != blank %}
            <img src="{{ settings.logo |  img_url:'master' }}" alt="{{ settings.logo.alt }}" class="site-logo">
          {% else %}
            <h1>{{ shop.name }}</h1>
          {% endif %}
        </div>
      </a>
    </div>
    <div class="actoins-bar" >
      <div class="icon-menue">
        <a href="#" class="search-icon">
          {% render 'icon' , name: 'search' %}
        </a>
        <a href="/account/login" class="header__link action-area__link">
        {% render 'icon' , name: 'account' %}
        </a>
        <a href="/cart" class="cart-icon">
          {% render 'icon' , name: 'cart' %}
        </a>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
 "name": "header",
 "class": "header",
 "settings": [
   {
     "type": "header",
     "content": "Logo"
   },
   {
     "type": "image_picker",
     "id":"logo",
     "label": "Logo"
   },
   {
    "type": "number",
    "id": "logo-width",
     "default":250,
    "label": "Logo Size"
  },
  {
    "type": "link_list",
    "id": "link_list",
    "label": "Link List",
    "default": "main-menu"
  }
 ],
 "presets": [
   {
       "name": "Header"
   }
 ]
}
{% endschema %}
