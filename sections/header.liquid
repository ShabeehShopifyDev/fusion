{% style %}
  .header_wrapper .header {
    background: {{ settings.header-background-color }};
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10px 20px;
  }
  .header_wrapper .header .logo {
    max-width: {{ section.settings.logo-width }}px;
  }
  .search-container {
    position: relative;
    width: 100%;
    max-width: 300px;
  }
  .search-input {
    width: 100%;
    padding: 8px 12px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }
  .search-results {
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    background: #fff;
    border: 1px solid #ccc;
    border-top: none;
    display: none;
    z-index: 10;
  }
  .search-results.active {
    display: block;
  }
  .search-results ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .search-results li {
    padding: 8px 12px;
    cursor: pointer;
  }
  .search-results li:hover {
    background: #f5f5f5;
  }
{% endstyle %}

<div class="header_wrapper">
  <div class="header">
    <nav class="navigations">
      <ul>
        {% assign links = linklists[section.settings.link_list].links %}
        {% for link in links %}
          <li>
            <a href="{{ link.url }}">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </nav>
    <div class="logo">
      <a href="{{ shop.url }}">
        {% if section.settings.logo != blank %}
          <img src="{{ section.settings.logo | img_url:'master' }}" alt="main-logo" class="main-logo">
        {% elsif settings.logo != blank %}
          <img src="{{ settings.logo | img_url:'master' }}" alt="main-logo" class="main-logo">
        {% else %}
          <h1>{{ shop.name }}</h1>
        {% endif %}
      </a>
    </div>
    <div class="search-container">
      <input type="search" class="search-input" placeholder="Search products...">
      <div class="search-results"></div>
    </div>
    {% comment %}
Search Results Section
{% endcomment %}
<div class="search-results">
  {% if search.results_count > 0 %}
    {% for product in search.results %}
      <div class="result-item">
        <a href="{{ product.url }}">
          <img src="{{ product.featured_image | img_url: '100x100' }}" alt="{{ product.title }}">
          <span>{{ product.title }}</span>
        </a>
      </div>
    {% endfor %}
  {% else %}
    <p>No products found.</p>
  {% endif %}
</div>

    <div class="icon-menu">
      <a href="#" class="fav-icon">{% render 'icon', name: 'fav' %}</a>
      <a href="#" class="search-icon">{% render 'icon', name: 'search' %}</a>
      <a href="/account/login" class="header__link action-area__link">{% render 'icon', name: 'account' %}</a>
      <a href="/cart" class="cart-icon">
        <span class="cart-count">{{ cart.item_count }}</span>
        {% render 'icon', name: 'cart' %}
      </a>
    </div>
  </div>
</div>
<script>
 const searchInput = document.querySelector('.search-input');
const searchResultsContainer = document.querySelector('.search-results');

searchInput.addEventListener('input', function () {
  const query = searchInput.value.trim();

  if (query.length < 3) {
    searchResultsContainer.innerHTML = '';
    return;
  }

  // Fetch the updated section with the search query
  fetch(`/search?section_id=search-results&q=${encodeURIComponent(query)}`)
    .then((response) => response.text())
    .then((html) => {
      // Parse the HTML and update the search results container
      const parser = new DOMParser();
      const newDoc = parser.parseFromString(html, 'text/html');
      const newContent = newDoc.querySelector('.search-results').innerHTML;

      searchResultsContainer.innerHTML = newContent;
    })
    .catch((error) => console.error('Error refreshing search section:', error));
});

</script>
{% schema %}
{
  "name": "header",
  "class": "header",
  "settings": [
    { "type": "header", "content": "Logo" },
    { "type": "image_picker", "id": "logo", "label": "Logo" },
    { "type": "number", "id": "logo-width", "default": 250, "label": "Logo Size" },
    { "type": "link_list", "id": "link_list", "label": "Link List", "default": "main-menu" }
  ],
  "presets": [{ "name": "Header" }]
}
{% endschema %}